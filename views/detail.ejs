    <script>
        function getNotes() {
            $('.main-footer').hide();
            $.get('/controller/getStartupLogs/<%= data.startup.id %>', function (res) {
                $('#comment-box').html("");
                console.log(res);
                if (res.body != "") {
                    var notes = JSON.parse(res.body);
                    for (var i = 0; i < notes.length; i++) {
                        $('#comment-box').append('<div class="card" style="padding: 10px;">' +
                            '<div class="post clearfix">' +
                            '<div class="user-block">' +
                            '<img class="img-circle img-bordered-sm" src="' + notes[i].consumer.profileImageUrl +
                            '" alt="User Image">' +
                            '<span class="username">' +
                            '<a href="#">' + notes[i].consumer.fullName + '</a>' +
                            '</span>' +
                            '<span class="description">' + formatDate(notes[i].startupLog.createdAt) +
                            '</span>' +
                            '</div>' +
                            '<p>' + notes[i].startupLog.content + '</p>' +
                            '</div>' +
                            '</div>');
                    }
                }
            });
        }



        function createLog() {
            var body = {
                "content": $("#noteInput").val()
            };
            $("#noteInput").val("");
            $.ajax({
                type: 'POST',
                dataType: "json",
                data: JSON.stringify(body),
                contentType: 'application/json; charset=utf-8',
                url: '/controller/createLog/<%= data.startup.id %>',
                success: function (data) {
                    console.log(data);
                    $('#comment-box').prepend('<div class="card" style="padding: 10px;">' +
                        '<div class="post clearfix">' +
                        '<div class="user-block">' +
                        '<img class="img-circle img-bordered-sm" src="' + data.consumer.profileImageUrl +
                        '" alt="User Image">' +
                        '<span class="username">' +
                        '<a href="#">' + data.consumer.fullName + '</a>' +
                        '</span>' +
                        '<span class="description">' + formatDate(data.startupLog.createdAt) +
                        '</span>' +
                        '</div>' +
                        '<p>' + data.startupLog.content + '</p>' +
                        '</div>' +
                        '</div>');

                },
                error: function (data) {
                    $(".message-box").toggle(750, function () {
                        setTimeout(function () {
                            $(".message-box").toggle(750);
                        }, 2000);
                    });
                }
            });
        }

        function formatDate(date) {
            var d = new Date(date),
                month = '' + (d.getMonth() + 1),
                day = '' + d.getDate(),
                year = d.getFullYear();

            if (month.length < 2) month = '0' + month;
            if (day.length < 2) day = '0' + day;

            return [day, month, year].join('-');
        }
    </script>

